{
  "name": "hooks-playground",
  "version": "1.0.0",
  "description": "A playground to demo the hooks library sdk.",
  "main": "index.js",
  "scripts": {
    "build:hook": "./node_modules/.bin/asc --disable=bulk-memory --runtime=stub contracts/base.ts -O3 -o build/base.wasm",
    "standalone": "yarn run build:hook && ts-node src/standalone.ts",
    "minicluster": "yarn run build:hook && ts-node src/minicluster.ts",
    "testnet": "yarn run build:hook && ts-node src/testnet.ts",
    "lint": "eslint ./src/**/* --ext .ts",
    "format": "npx prettier --write ./src"
  },
  "author": {
    "name": "Denis Angell",
    "url": "https://github.com/dangell7"
  },
  "license": "ISC",
  "dependencies": {
    "@transia/hooks-toolkit": "^1.0.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@eqlabs/assemblyscript": "^0.0.0-alpha.1680097351",
    "@tsconfig/node16": "^1.0.3",
    "@types/chai": "^4.3.4",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
