{
  "name": "@transia/hooks-toolkit",
  "version": "1.0.4",
  "description": "A toolkit for interacting with smart contracts (hooks) on the XRP Ledger.",
  "main": "dist/npm/src/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "build:hooks": "c2wasm-cli contracts build",
